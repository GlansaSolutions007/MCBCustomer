{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "outDir": "./build",
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"]
      },
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "bundler",
      "jsx": "react-native",
      "allowJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": []
    },
    "include": ["src", "index.d.ts", "src/types/**/*.d.ts", "App.tsx"],
    "exclude": [
      "node_modules",
      "build",
      "dist",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }
  